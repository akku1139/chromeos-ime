BEGIN {
    FS = "\t"; # フィールドセパレータをタブに設定
}

{
    # ----------------------------------------------------
    # キー ($1) の処理
    # ' を \' に置換する (gsubの置換文字列内で \ を表すには \\ が必要)
    key = $1;
    gsub(/'/, "\\'", key);

    # ----------------------------------------------------
    # 値 ($2) の処理
    value1 = $2;
    gsub(/'/, "\\'", value1);

    # フィールド数に応じて出力形式を決定
    if (NF == 2) {
        # フィールドが2つの場合: '$1': ['$2']
        print "'" key "': ['" value1 "'],";

    } else if (NF >= 3) {
        # フィールドが3つ以上の場合: '$1': ['$2', '$3']

        # 値 ($3) の処理
        value2 = $3;
        gsub(/'/, "\\'", value2);

        print "'" key "': ['" value1 "', '" value2 "'],";
    }
}
